<body>
    <div class="container">
        <table class="clock">
            <tr>
                <td id="hours"></td>
                <td>:</td>
                <td id="minutes"></td>
                <td>:</td>
                <td id="seconds"></td>
            </tr>
            <tr>
                <td colspan="3" id="date"></td>
                <td colspan="2" id="day"></td>
            </tr>
        </table>
    </div>

    <script>
        var hours = document.getElementById('hours');
        var minutes = document.getElementById('minutes');
        var seconds = document.getElementById('seconds');
        var date = document.getElementById('date')
        var day = document.getElementById('day')

        const doubleDigit = (single) => {
            return '0' + single.toString();
        }

        setInterval(() => {
            // Getting Date Object
            let myDate = new Date();

            // Updating Time
            let mySecond = myDate.getSeconds();
            let myMinute = myDate.getMinutes();
            let myHour = myDate.getHours();

            if (mySecond < 10) {
                mySecond = doubleDigit(mySecond);
            }
            if (myMinute < 10) {
                myMinute = doubleDigit(myMinute);
            }
            if (myHour < 10) {
                myHour = doubleDigit(myHour);
            }

            hours.innerHTML = myHour;
            minutes.innerHTML = myMinute;
            seconds.innerHTML = mySecond;

            // Updating Date
            let DD = myDate.getDate();
            let MM = myDate.getMonth();
            let YYYY = myDate.getFullYear();

            if (DD < 10) {
                DD = doubleDigit(DD);
            }
            if (MM < 10) {
                MM = doubleDigit(MM);
            }

            date.innerHTML = `${DD} / ${MM} / ${YYYY}`

            // Updating Day
            let myDay = myDate.getDay();
            const myDayArr = ['Sunday', 'Monday', 'Tuesday', 'Wednessday', 'Thursday', 'Friday', 'Saturday'];

            for (let i = 0; i < myDayArr.length; i++) {
                const myDayString = myDayArr[i];
                day.innerHTML = myDayString;
                break;
            }
        }, 1000);
            </script>
</body>

</html>
